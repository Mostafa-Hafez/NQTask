@model NQTASK.Models.ViewModels.Account.LoginVM

@{
    ViewData["Title"] = "Login";
   
}
<!DOCTYPE html>
    <html>
    <head>
    <title>@ViewData["Title"] - NQTASK</title>
    <link rel="stylesheet" href="~/css/thirdparty.bundle.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            justify-content: center;
            align-items: center;
            text-align:center;
            background-color: powderblue;
        }
    </style>
    </head>
    <body>
    

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Login" style="width: 300px; margin: auto; margin-top: 50px; display: block;">
                <h1>Welcome To Our Website</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" placeholder="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" placeholder="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <p style="text-align:center;color:red">@ViewBag.error</p>
                <div class="form-group">
                    <input type="submit" value="LogIn" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <p>Dont have an Account? <a asp-action="Registration">Rigister Now</a></p>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    <script src="~/js/site.thirdparty.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    </body>
    </html>

